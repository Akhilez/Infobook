<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    tools:context="in.akhilkanna.myinfo.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="35dp"
        android:id="@+id/main_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/appbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="#fff"
                android:textSize="24sp"
                android:fontFamily="cursive"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/toolbarButtons"
                android:visibility="invisible"
                android:layout_alignParentEnd="true">


                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/edit_icon"
                    android:layout_toEndOf="@+id/delete_icon"
                    android:src="@drawable/ic_create_white_24dp"/>

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:id="@+id/delete_icon"
                    android:src="@drawable/ic_delete_white_24dp"/>



            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar">

            <ListView
                android:id="@+id/titles_list"
                android:layout_width="match_parent"
                android:divider="#80515151"
                android:dividerHeight="0.5dp"
                android:layout_height="match_parent">
            </ListView>

        </RelativeLayout>

        <com.wunderlist.slidinglayer.SlidingLayer xmlns:slidingLayer="http://schemas.android.com/apk/res-auto"
            android:id="@+id/login_sliding_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="7dp"
            slidingLayer:changeStateOnTap="true"
            slidingLayer:shadowSize="250dp"
            slidingLayer:stickTo="bottom">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="7dp"
                android:background="#fff">

                <RelativeLayout
                    android:id="@+id/pinsLayout"
                    android:layout_width="300dp"
                    android:layout_height="330dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp">


                    <RelativeLayout
                        android:id="@+id/dot_R1"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/dot1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:tintMode="multiply"
                            android:tint="#666666"
                            android:layout_centerInParent="true"
                            android:padding="10dp"
                            android:src="@drawable/ic_panorama_fish_eye_black_24dp"
                            android:tag="0" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/dot_R2"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/dot_R1"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/dot2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:padding="10dp"
                            android:src="@drawable/ic_panorama_fish_eye_black_24dp"
                            android:tag="0"
                            android:tint="#666666"
                            android:tintMode="multiply" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/dot_R3"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/dot_R2"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/dot3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:padding="10dp"
                            android:src="@drawable/ic_panorama_fish_eye_black_24dp"
                            android:tag="0" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/dot_R4"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_toEndOf="@+id/dot_R3"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/dot4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:padding="10dp"
                            android:src="@drawable/ic_panorama_fish_eye_black_24dp"
                            android:tag="0" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pin1"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/dot_R1"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:id="@+id/pin1Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pin2"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/dot_R1"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/pin2Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="2" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pin3"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_alignParentEnd="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_below="@+id/dot_R1">

                        <TextView
                            android:id="@+id/pin3Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="3" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pin4"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_below="@+id/pin1">

                        <TextView
                            android:id="@+id/pin4Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="4" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pin5"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_below="@+id/pin1"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/pin5Text"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:text="5" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pin6"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/pin1">

                        <TextView
                            android:id="@+id/pin6Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="6" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pin7"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_below="@+id/pin4">

                        <TextView
                            android:id="@+id/pin7Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="7" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pin8"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/pin4"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/pin8Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="8" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pin9"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_alignParentEnd="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_below="@+id/pin4">

                        <TextView
                            android:id="@+id/pin9Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="9" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pin0"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_below="@+id/pin7"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/pin0Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="0" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pinBack"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/pin9">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Del" />
                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>

        </com.wunderlist.slidinglayer.SlidingLayer>

        <com.wunderlist.slidinglayer.SlidingLayer xmlns:slidingLayer="http://schemas.android.com/apk/res-auto"
            android:id="@+id/items_sliding_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            slidingLayer:changeStateOnTap="false"
            slidingLayer:stickTo="right">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#999ccc">

                <ListView
                    android:id="@+id/items_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>

            </RelativeLayout>

        </com.wunderlist.slidinglayer.SlidingLayer>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="26dp"
            android:layout_marginEnd="26dp"
            android:src="@drawable/ic_add_white_24dp" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/main_nav" />

</android.support.v4.widget.DrawerLayout>
